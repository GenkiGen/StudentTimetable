<div class="card p-3">
    <h1>Create a course</h1>
    <%= render 'courses/errors'%>
    <%= form_for(@course, url: create_course_path, html: { class: 'form-group' }) do |f| %>
        <%= f.text_field :name, class: 'form-control', placeholder: '*Course name' %>
        <%= f.text_field :code, class: 'form-control', placeholder: '*Course code' %>
        <%= f.file_field :picture, accept: 'image/png,image/jpeg,image/jpg,image/gif', class: 'form-control-file', id: 'file-upload' %>
        <%= f.submit 'Add course', class: 'btn btn-primary' %>
    <% end %>
<div>

<script type="text/javascript">
    document.querySelector('#file-upload').onchange = (event) => {
        let fileSize = event.target.files[0].size/1024/1024
        if(fileSize > 5) {
            alert('Please upload image smaller than 5MB')
        }
    }
</script>